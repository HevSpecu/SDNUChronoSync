---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "多用户课表与日程管理工具" } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    
    <!-- Inter Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    
    <!-- Theme initialization script - runs before page render to avoid flash -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('app-theme');
        if (theme === 'dark') {
          document.documentElement.classList.add('dark-mode');
        }
      })();
    </script>
  </head>
  <body class="bg-gray-50 min-h-screen flex flex-col">
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: 'Inter', system-ui, sans-serif;
  }
  
  body {
    margin: 0;
    padding: 0;
  }
  
  * {
    box-sizing: border-box;
  }
  
  /* 深色模式样式 - 使用反色滤镜 */
  html.dark-mode {
    filter: invert(1) hue-rotate(180deg);
    background-color: #1a1a1a;
  }
  
  /* 图片和媒体元素需要再次反色以保持正常显示 */
  html.dark-mode img,
  html.dark-mode video,
  html.dark-mode iframe,
  html.dark-mode [style*="background-image"] {
    filter: invert(1) hue-rotate(180deg);
  }
  
  /* 平滑过渡效果 */
  html,
  body {
    transition: filter 0.3s ease-in-out, background-color 0.3s ease-in-out;
  }
  
  /* 确保日期时间输入框使用中国格式 */
  input[type="date"], input[type="datetime-local"] {
    font-family: 'Inter', system-ui, sans-serif;
  }
  
  /* 强制浏览器使用中国日期格式 */
  :lang(zh-CN) input[type="date"]::-webkit-datetime-edit-year-field,
  :lang(zh-CN) input[type="datetime-local"]::-webkit-datetime-edit-year-field {
    order: 1;
  }
  
  :lang(zh-CN) input[type="date"]::-webkit-datetime-edit-month-field,
  :lang(zh-CN) input[type="datetime-local"]::-webkit-datetime-edit-month-field {
    order: 2;
  }
  
  :lang(zh-CN) input[type="date"]::-webkit-datetime-edit-day-field,
  :lang(zh-CN) input[type="datetime-local"]::-webkit-datetime-edit-day-field {
    order: 3;
  }
</style>
